{
    "type": "object",
    "properties": {
        "campaignId": {
            "required": true,
            "type": "integer",
            "format": "int64"
        },
        "requestBody": {
            "type": "object",
            "description": "Status of the campaign",
            "example": "draft",
            "properties": {
                "status": {
                    "type": "string",
                    "description": "Note:- replicateTemplate status will be available only for template type campaigns.",
                    "enum": [
                        "suspended",
                        "archive",
                        "darchive",
                        "sent",
                        "queued",
                        "replicate",
                        "replicateTemplate",
                        "draft"
                    ]
                }
            }
        }
    }
}